<?xml version="1.0" encoding="utf-8"?>
<root>
	<!--
		Все предметы должны находиться в одном из следующих тегов:
		<common>Обычные</common>
		<rare>Редкие</rare>
		<epic>Эпические</epic>
		<legendary>Легендарные</legendary>
	-->
	
	<!-- Обычные предметы. -->
	<common>
		<!-- Простые предметы требуют только их названия. -->
		<item>коммонку</item>
		<!-- Используемые предметы либо экипировка требуют вложенной структуры. -->
		<item>
			<!-- Имя сложного предмета. -->
			<name>другую коммонку</name>
			<!-- Активируемая способность. -->
			<abilityId>someAbility</abilityId>
		</item>
	</common>

	<!-- Редкие предметы. -->
	<rare>
		<item>рарку</item>
		<item>кинжалера</item>
	</rare>

	<!-- Эпические предметы. -->
	<epic>
		<item>эпик</item>
		<item>горного гиганта</item>
	</epic>

	<!-- Легендарные предметы. -->
	<legendary>
		<item>легендарку</item>
		<item>доктора Бума</item>
	</legendary>
</root>